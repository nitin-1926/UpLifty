{
	"name": "uplifty",
	"version": "0.2.0",
	"description": "A simple and intuitive frontend file upload library for cloud storage services with support for AWS S3",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/nitin-1926/UpLifty.git"
	},
	"scripts": {
		"build": "tsc",
		"prepare": "npm run build",
		"test": "jest",
		"lint": "eslint src --ext .ts",
		"docs": "typedoc",
		"publish:npm": "npm publish --registry=https://registry.npmjs.org/"
	},
	"keywords": [
		"upload",
		"file-upload",
		"s3",
		"aws",
		"cloud-storage"
	],
	"author": "Nitin Gupta",
	"license": "MIT",
	"dependencies": {
		"@aws-sdk/client-s3": "^3.758.0",
		"@aws-sdk/lib-storage": "^3.758.0",
		"@aws-sdk/s3-request-presigner": "^3.916.0"
	},
	"devDependencies": {
		"@types/jest": "^29.5.11",
		"@types/node": "^20.11.0",
		"@typescript-eslint/eslint-plugin": "^7.15.0",
		"@typescript-eslint/parser": "^7.15.0",
		"eslint": "^8.57.0",
		"jest": "^29.7.0",
		"ts-jest": "^29.1.1",
		"typedoc": "^0.25.7",
		"typescript": "^5.3.3"
	},
	"engines": {
		"node": ">=14.0.0"
	}
}
